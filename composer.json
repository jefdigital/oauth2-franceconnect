{
    "name": "jefdigital/oauth2-franceconnect",
    "type": "library",
    "description": "Franceconnect OAuth 2.0 Client Provider for The PHP League OAuth2-Client",
    "keywords": [
        "jefdigital",
        "oauth2-franceconnect"
    ],
    "homepage": "https://github.com/jefdigital/oauth2-franceconnect",
    "license": "MIT",
    "authors": [
        {
            "name": "JF Magnier",
            "email": "hello@jefdigital.fr",
            "homepage": "https://jefdigital.fr",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "~5.6|~7.0",
        "league/oauth2-client": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit" : ">=5.4.3",
        "squizlabs/php_codesniffer": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "JefDigital\\OAuth2\\Client\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "JefDigital\\OAuth2\\Client\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
